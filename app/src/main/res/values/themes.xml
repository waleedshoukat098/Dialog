<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MainFragment" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MainFragment" parent="Base.Theme.MainFragment" />
    <style name="DialogBox" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:statusBarColor">#00000000</item> <!-- And then this will be needed -->
        <item name="rippleColor">@color/transparent</item>
        <item name="colorOnPrimary">@color/transparent</item>

        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="bottomSheetStyle">@style/BottomSheetD</item>
    </style>
    <style name="BottomSheetD" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Button.Medium.Woodsmoke.14sp.CatskillWhite" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_44sdp</item>
        <item name="android:fontFamily">@font/aspira_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/woodsmoke</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/catskill_white</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="TexView.Regular.Nevada.12sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/aspira_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/nevada</item>
    </style>
    <style name="Button.Demi.Black.14sp.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_44sdp</item>
        <item name="android:fontFamily">@font/aspira_demi</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/force_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/lochmara</item>
        <item name="cornerRadius">@dimen/default_primary_button_corner_radius</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="TexView.Demi.Woodsmoke.20sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/aspira_demi</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:textColor">@color/woodsmoke</item>
    </style>
</resources>